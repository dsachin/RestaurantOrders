@model IEnumerable<DataModel.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Menu.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TableConfig.TableID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Menu.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TableConfig.TableID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TableNo }) |
            @Html.ActionLink("Details", "Details", new { id=item.TableNo }) |
