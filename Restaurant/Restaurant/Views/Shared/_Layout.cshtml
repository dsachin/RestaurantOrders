<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title FooD Court Restro</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body style="padding-top:0;" class="bg-transparent">
    <nav class="navbar navbar-expand-lg navbar-light bg-light " style="margin-bottom:10px">
        <a class="navbar-brand" href="/Home/Index">FooD Court</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/OrderMenu">New Order <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <span class="glyphicon glyphicon-refresh"></span>  <a class="nav-link" href="/Home/EditOrder">Edit Order</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Bill">Pay Bill</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="/Home/Details">Orders</a>
                </li>
                <li class="nav-item float-right align-right">
                    <a class="nav-link " href="/RestaurantManagement/Dashboard">Restaurant Management</a>
                </li>
            </ul>
        </div>
    </nav>
<div class="container body-content">
        <span class="glyphicon glyphicon-refresh"></span>
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - FooD Court</p>
        </footer>
    </div>


</body>
</html>